<script>
    function searchRecipes() {
        let input = document.getElementById('searchBar').value.toLowerCase();
        let recipes = document.querySelectorAll('.recipeItem');

        recipes.forEach(function(recipe) {
            let recipeName = recipe.textContent.toLowerCase();
            if (recipeName.indexOf(input) > -1) {
                recipe.style.display = "";
            } else {
                recipe.style.display = "none";
            }
        });
    }

    function showRecipe(recipeId) {
        let recipeDetails = document.getElementById('recipeDetails');
        let recipeImage = document.getElementById('recipeImageDetails');
        let recipeTitle = document.getElementById('recipeTitle');
        let recipeIngredients = document.getElementById('recipeIngredients');
        let recipeInstructions = document.getElementById('recipeInstructions');

        // Reset recipe details
        recipeIngredients.innerHTML = '';
        recipeInstructions.innerHTML = '';

        switch(recipeId) {
            case 'recipe1':
                recipeTitle.textContent = 'Spaghetti Bolognese';
                recipeImage.src = 'https://images.unsplash.com/photo-1595391713150-6fbb5f6ad9d9?crop=entropy&cs=tinysrgb&fit=max&ixid=MnwzNjAwMHwwfDF8c2VhY2h8MTF8fGJvbG9nbmVzZXxlbnwwfHx8fDE2MTkzNzQyNTQ&ixlib=rb-1.2.1&q=80&w=400';
                recipeIngredients.innerHTML = '<li>200g Spaghetti</li><li>400g Ground Beef</li><li>1 Onion</li><li>1 Can Tomato Sauce</li><li>Garlic, Basil, Salt, and Pepper to taste</li>';
                recipeInstructions.textContent = 'Boil the spaghetti. In another pan, cook the beef and add the chopped onion and garlic. Once browned, add the tomato sauce and simmer. Combine with the spaghetti and season with basil, salt, and pepper.';
                break;
            case 'recipe2':
                recipeTitle.textContent = 'Chicken Tacos';
                recipeImage.src = 'https://images.unsplash.com/photo-1602774698224-5b477ab4a504?crop=entropy&cs=tinysrgb&fit=max&ixid=MnwzNjAwMHwwfDF8c2VhY2h8OXx8Y2hpY2tlbiB0YWNvc3xlbnwwfHx8fDE2MTkzNzQxNjg&ixlib=rb-1.2.1&q=80&w=400';
                recipeIngredients.innerHTML = '<li>2 Chicken Breasts</li><li>Soft Tortillas</li><li>Chopped Lettuce</li><li>Shredded Cheese</li><li>Tomato Salsa</li>';
                recipeInstructions.textContent = 'Grill the chicken breasts and slice them thin. Warm the tortillas, then layer the chicken, lettuce, cheese, and salsa. Fold and serve.';
                break;
            case 'recipe3':
                recipeTitle.textContent = 'Vegetarian Salad';
                recipeImage.src = 'https://images.unsplash.com/photo-1603472081634-bc0b15a6b254?crop=entropy&cs=tinysrgb&fit=max&ixid=MnwzNjAwMHwwfDF8c2VhY2h8Mnx8dmVnZXRhcmlhbiBzYWxhZHN8ZW58MHx8fHwxNjE5Mzc0MDE0&ixlib=rb-1.2.1&q=80&w=400';
                recipeIngredients.innerHTML = '<li>Mixed Greens</li><li>Cucumber</li><li>Carrot</li><li>Olives</li><li>Olive Oil and Vinegar Dressing</li>';
                recipeInstructions.textContent = 'Toss the vegetables together in a bowl. Drizzle with olive oil and vinegar dressing and serve immediately.';
                break;
            case 'recipe4':
                recipeTitle.textContent = 'Pancakes';
                recipeImage.src = 'https://images.unsplash.com/photo-1605202551527-d35d37a8c7e4?crop=entropy&cs=tinysrgb&fit=max&ixid=MnwzNjAwMHwwfDF8c2VhY2h8M3x8cGFuY2FrZXN8ZW58MHx8fHwxNjE5Mzc1OTAw&ixlib=rb-1.2.1&q=80&w=400';
                recipeIngredients.innerHTML = '<li>1 Cup Flour</li><li>1 Egg</li><li>1 Cup Milk</li><li>1 tbsp Sugar</li><li>1 tsp Baking Powder</li>';
                recipeInstructions.textContent = 'Mix the dry ingredients in one bowl and the wet ingredients in another. Combine both and cook on a hot griddle. Serve with syrup and butter.';
                break;
        }
        recipeDetails.style.display = 'block';
    }
</script>

